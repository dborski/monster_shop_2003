<h1><%=@user.name %>'s Orders Index</h1>

<% @user.orders.each do |order| %>

  <section id="order-<%= order.id %>">
    <h3><%= link_to "Order ID: #{order.id}", "/profile/orders/#{order.id}" %></h3>
    <p>Order Name: <%=order.name %></p>
    <p>Created At: <%=order.created_at %></p>
    <p>Updated At: <%=order.updated_at %></p>
    <p>Order Status: <%=order.status %></p>
    <p>Total Items: <%=order.total_items %></p>
    <p>Grand Total: <%=order.grandtotal %></p>
  </section>
<% end %>
 