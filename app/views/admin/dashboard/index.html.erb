<h1>Admin Dashboard</h1>
<%= link_to 'Merchant Index', admin_merchants_path %>
<% if !@orders.empty? %>
  <section id="packaged">
    <h3>Packaged Orders</h3>
    <% @orders.each do |order| %>
      <% if order.packaged? %>
        <section id="order-<%=order.id%>">
          <%= link_to "Order #{order.id}", "/admin/users/#{order.user_id}/orders/#{order.id}" %>
          <p>Ordered by: <%=order.user.name %></p>
          <p>Order id: <%=order.id %></p>
          <p>Created at: <%=order.created_at %></p>
          <p>Order Status: <%=order.status %></p>
          <%= button_to 'Ship Order', "/orders/#{order.id}?admin=true", method: :patch %>
        </section>
        <%end %>
    <%end %>
  </section>
  <section id="pending">
    <h3>Pending Orders</h3>
    <% @orders.each do |order| %>
      <% if order.pending? %>
        <section id="order-<%=order.id%>">
          <%= link_to "Order #{order.id}", "/admin/users/#{order.user_id}/orders/#{order.id}" %>
          <p>Ordered by: <%=order.user.name %></p>
          <p>Order id: <%=order.id %></p>
          <p>Created at: <%=order.created_at %></p>
          <p>Order Status: <%=order.status %></p>
        </section>
      <%end %>
    <%end %>
  </section>
  <section id="shipped">
    <h3>Shipped Orders</h3>
    <% @orders.each do |order| %>
      <% if order.shipped? %>
        <section id="order-<%=order.id%>">
          <%= link_to "Order #{order.id}", "/admin/users/#{order.user_id}/orders/#{order.id}" %>
          <p>Ordered by: <%=order.user.name %></p>
          <p>Order id: <%=order.id %></p>
          <p>Created at: <%=order.created_at %></p>
          <p>Order Status: <%=order.status %></p>
        </section>
      <%end %>
    <%end %>
  </section>
  <section id="cancelled">
    <h3>Cancelled Orders</h3>
    <% @orders.each do |order| %>
      <% if order.cancelled? %>
        <section id="order-<%=order.id%>">
          <%= link_to "Order #{order.id}", "/admin/users/#{order.user_id}/orders/#{order.id}" %>
          <p>Ordered by: <%=order.user.name %></p>
          <p>Order id: <%=order.id %></p>
          <p>Created at: <%=order.created_at %></p>
          <p>Order Status: <%=order.status %></p>
        </section>
      <%end %>
    <%end %>
  </section>
<%end %>