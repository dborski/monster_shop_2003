<h2><%= @user.name %></h2>
<p> Address: <%= @user.address %></p><br/>
<p>City: <%= @user.city%></p><br>
<p>State: <%= @user.state%></p><br>
<p>Zip: <%= @user.zip%></p><br>
<p>Email: <%= @user.email%></p><br>

<% if !@orders.empty? %>
  <% @orders.each do |order| %>
    <section id="order-<%=order.id%>">
      <p><%=order.name %></p>
      <%= link_to "Order #{order.id}", "/admin/users/#{@user.id}/orders/#{order.id}" %> 
      <br><br>
    </section>
  <%end %>

<% end %>