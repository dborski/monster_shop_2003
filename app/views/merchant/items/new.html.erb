<h1>Add Item to Merchant <%=@merchant.id %> Inventory</h1>

<section id="new-item-form">
  <%= form_for [@merchant, @item] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> 
  
    <%= f.label :description %>
    <%= f.text_field :description %> 
  
    <%= f.label :image %>
    <%= f.text_field :image %> 
  
    <%= f.label :price %>
    <%= f.number_field :price, min: 1 %> 
  
    <%= f.label :inventory %>
    <%= f.number_field :inventory, min: 1 %> 
  
    <%= f.submit %>
  <% end %>

</section>